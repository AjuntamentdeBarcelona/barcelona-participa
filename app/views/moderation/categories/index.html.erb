<h2><%= t("moderation.categories.index.title") %></h2>
<h3><%= page_entries_info @categories %></h3>
<ul id="categories" class="admin-list">
  <% CategoryDecorator.decorate_collection(@categories).each do |category| %>
    <li>
      <span><%= category.name_with_code %></span> [<%= category.participatory_process.decorate.title %>]
      <div class="right">
        <%= link_to t('moderation.categories.index.edit'), edit_moderation_category_path(category), class: "button tiny radius" %>
        <%= link_to t('moderation.categories.index.view_subcategories'), moderation_category_subcategories_path(category), class: "button tiny radius" %>
        <%= link_to t('moderation.categories.index.delete'), moderation_category_path(category), method: :delete,  class: "button tiny radius alert", data: { confirm: t('moderation.actions.confirm') } %>
      </div>
    </li>
  <% end %>
</ul>

<%= paginate @categories %>

<div class="right">
  <%= link_to t('moderation.categories.index.new'), new_moderation_category_path, class: "button radius alert right" %>
</div>
