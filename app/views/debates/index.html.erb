<% provide :title do %><%= t('debates.index.title') %><% end %>

<section role="main">
  <div class="row columns">
    <div class="title-action">
      <h2 class="title-action__title section-heading">Debates abiertos</h2>
      <%= link_to url_for(action: :new), class: "title-action__action button small hollow button--sc" do %>
        <%= t("debates.index.start_debate") %>
        <%= icon "plus" %>
      <% end %>
    </div>
  </div>
  <div id="debates" class="debates-list row small-up-1 medium-up-2 large-up-3 card-grid">
    <%= render @debates %>
    <%= paginate @debates %>
  </div>
</section>
