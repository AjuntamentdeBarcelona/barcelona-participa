<div class="debate-edit row">

  <div class="small-12 column">
    <%= link_to url_for(action: :index, id: nil), class: "left back clear" do %>
      <i class="icon-angle-left left"></i>
      <%= t("debates.edit.back_link") %>
    <% end %>

    <div class="right">
      <%= link_to t("debates.edit.show_link"), url_for(action: :show, id: @debate) %>
    </div>

    <h1><%= t("debates.edit.editing") %></h1>

    <%= render "form", form_url: url_for(action: :show, id: @debate) %>
  </div>
</div>
